<div class="mt-4">
  <div class="row">
    {{#each courses}}
      <div class="col-sm-6 col-lg-3 item-course">
        <div class="card card-course">
          <a class="card-course__link" href="/courses/{{this.slug}}">
            <img
              class="card-img-top"
              src="{{this.image}}"
              alt="Card image cap"
            />
          </a>
          <div class="card-body">
            <a class="card-course__link" href="/courses/{{this.slug}}">
              <h5 class="card-title">{{this.name}}</h5></a>
            <p class="card-course__description">{{this.description}}</p>
            <a href="#" class="btn btn-primary">Go somewhere</a>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>