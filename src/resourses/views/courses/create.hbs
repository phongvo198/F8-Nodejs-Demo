<div class="mt-4">
  <h2>Đăng khóa học</h2>
  <form method="POST" action="/courses/store">
    <div class="form-group">
      <label for="name">Tiêu đề</label>
      <input
        type="text"
        class="form-control"
        id="name"
        name="name"
      />
    </div>
    <div class="form-group">
      <label for="description">Chi tiết</label>
      <textarea
        class="form-control"
        id="description"
        name="description"
      ></textarea>
    </div>
    <div class="form-group">
      <label for="videoId">Mã video</label>
      <input
        type="text"
        class="form-control"
        id="videoId"
        name="videoId"
      />
    </div>
    <div class="form-group">
      <label for="level">Cấp độ chuẩn để học</label>
      <input
        type="text"
        class="form-control"
        id="level"
        name="level"
      />
    </div>

    <button type="submit" class="btn btn-primary">Thêm khóa học</button>
  </form>
</div>