<div class="mt-4">
  <div>
    <a href="/me/stored/courses">Danh sách khóa học</a>
    <h2>Khóa học đã xóa</h2>
  </div>

  <table class="table mt-4">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Tên khóa học</th>
        <th scope="col">Trình độ</th>
        <th scope="col">Thời gian xóa</th>
        <th scope="col" colspan="2"></th>
      </tr>
    </thead>
    <tbody>
      {{#each courses}}
        <tr>
          <th scope="row">{{sum @index 1}}</th>
          {{! dùng helper:tên helper đối số 1 đói số 2 }}
          <td>{{this.name}}</td>
          <td>{{this.level}}</td>
          <td>{{formatDatetime this.deletedAt}}</td>
          <td>
            <a
              href=""
              class="btn btn-link btn-restore"
              data-id="{{this._id}}"
            >Khôi phục</a>
          </td>
          <td>
            <a
              href=""
              class="btn btn-link"
              data-id="{{this._id}}"
              data-toggle="modal"
              data-target="#delete-course-model"
            >Xóa vĩnh viễn</a>
          </td>
        </tr>
      {{else}}
        <tr class="text-center">
          <td colspan="5">
            Thùng rác trống.
            <a href="/me/stored/courses/">Danh sách khóa học</a>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>

<!--Confirm Modal -->
<div
  class="modal fade"
  id="delete-course-model"
  tabindex="-1"
  role="dialog"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Xóa khóa học</h5>
        <button
          type="button"
          class="close"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>
          Hành động này sẽ không thể khôi phục.Bạn vẫn muốn xóa khóa học này?
        </p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">
          Hủy
        </button>
        <button type="button" id="btn-delete-course" class="btn btn-danger">
          Đồng ý
        </button>
      </div>
    </div>
  </div>
</div>
{{!Delete Form}}
<form name="delete-course-form" method="POST"></form>
{{!Resore Form}}
<form name="restore-course-form" method="POST"></form>
<script>
  document.addEventListener("DOMContentLoaded", function () { var courseId; var
  deleteForm = document.forms["delete-course-form"]; var restoreForm =
  document.forms["restore-course-form"]; var btnDeleteCourse =
  document.getElementById("btn-delete-course"); var btnRestoreCourse =
  $(".btn-restore"); //gán sk cho tất cả các nút restore
  btnRestoreCourse.click(function (e) { e.preventDefault(); var courseId =
  $(this).data("id"); restoreForm.action = "/courses/" + courseId +
  "/restore?_method=PATCH"; restoreForm.submit(); });
  $("#delete-course-model").on("show.bs.modal", function (event) { var button =
  $(event.relatedTarget); courseId = button.data("id"); });
  btnDeleteCourse.onclick = function () { deleteForm.action = "/courses/" +
  courseId + "/force?_method=DELETE"; deleteForm.submit(); }; });
</script>